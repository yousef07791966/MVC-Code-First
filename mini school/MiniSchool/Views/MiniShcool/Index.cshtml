@{
    ViewBag.Title = "Dashboard";
}

<h2 style="margin:3% 0% 3% 45%; color:red;">SchoolAdmin</h2>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">

<!-- Display Classes and Subjects -->
<div class="container">
    <div class="row">
        <!-- Display Classes -->
        <div class="col-md-6 mb-4">
            <h3>Classes</h3>
            <div class="d-flex flex-column gap-4">
                @foreach (var classItem in ViewBag.Classes)
                {
                    <div class="cookieCard">
                        <p class="cookieHeading">@classItem.ClassName</p>
                        <p class="cookieDescription">View and manage students and assignments for this class.</p>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Index", "Students", new { classId = classItem.ClassId })" class="acceptButton">Show Students</a>
                            <a href="@Url.Action("Index", "Assignments", new { classId = classItem.ClassId })" class="acceptButton">Assignments</a>

                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Display Static Card for Subjects -->
        <div class="col-md-6 mb-4">
            <h3>Subjects</h3>
            <div class="cookieCard">
                <p class="cookieHeading">Subjects</p>
                <p class="cookieDescription">View and manage subjects across different classes.</p>
                <a href="@Url.Action("Index", "Subjects")" class="acceptButton">Show Subjects</a>
            </div>
        </div>
    </div>
</div>
<style>
    .cookieCard {
        width: 100%;
        height: 16em;
        border: 2px solid rgba(55, 20, 100, 0.8); /* Darker border color */
        border-radius: 1.5em;
        background: linear-gradient(to bottom right, rgba(55, 20, 100, 0.8), rgba(55, 20, 100, 0.1)); /* Darker gradient */
        color: white;
        font-family: 'Nunito', sans-serif;
        padding: 1em;
        display: flex;
        flex-direction: column;
        gap: 0.75em;
        backdrop-filter: blur(12px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3); /* Darker shadow for better contrast */
    }

    .cookieHeading {
        font-size: 2em;
        font-weight: 500;
    }

    .cookieDescription {
        font-size: 0.85em;
    }

    .acceptButton {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5em 1em;
        border: 1px solid white;
        border-radius: 9999px;
        background: transparent;
        color: white;
        text-decoration: none;
        transition: transform 0.2s, color 0.2s;
        font-size: 0.85em;
        font-weight: 500;
    }

        .acceptButton:hover {
            transform: translateY(-0.125em);
        }

        .acceptButton svg {
            margin-left: 0.5em;
            transition: transform 0.3s;
        }

        .acceptButton:hover svg {
            transform: translateX(10%);
        }
</style>
